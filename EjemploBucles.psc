Algoritmo EjemploBucles
	//QUIERO UN PROGRAMA QUE MUESTRE LOS NUMEROS 
	//DE 1 A 4
	//EN UN BUCLE WHILE NECESITAMOS UNA VARIABLE EXTERNA
	contador <- 1
	//NUESTRA CONDICION DEBE SER PARA TRUE O FALSE
	Mientras contador <= 4 Hacer
		Escribir contador
		//DENTRO DEL BUCLE WHILE, SIEMPRE
		//DEBEMOS HACER ALGUNA ACCION PARA QUE LA 
		//CONDICION SE CUMPLA Y PUEDA SALIR DEL BUCLE
		contador <- contador + 1
	FinMientras
	Escribir "Fin de programa"
FinAlgoritmo
