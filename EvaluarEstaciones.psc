Algoritmo EvaluarEstaciones
	numero <- 0
	Escribir "Introduzca un número (1-4)"
	Leer numero
	Segun numero Hacer
		1:
			Escribir "PRIMAVERA"
		2:
			Escribir "VERANO"
		3:
			Escribir "OTOÑO"
		4:
			Escribir "INVIERNO"
		De Otro Modo:
			//ES EL ELSE
			Escribir "Número incorrecto, solo de 1 a 4"
	Fin Segun
	Escribir "Fin de programa"
FinAlgoritmo
